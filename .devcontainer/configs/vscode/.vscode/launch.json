    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Postgres] CC",
            "type": "Ruby",
            "request": "launch",
            "useBundler": true,
            "cwd": "${workspaceRoot}",
            "program": "bin/cloud_controller",
            "args": [
                "-c",
                "tmp/cloud_controller.yml"
            ],
            "env": {
                "DB": "postgres",
                "DB_CONNECTION_STRING": "postgres://postgres:supersecret@localhost:5432/ccdb"
            }
        },
        {
            "name": "[Mariadb] CC",
            "type": "Ruby",
            "request": "launch",
            "useBundler": true,
            "cwd": "${workspaceRoot}",
            "program": "bin/cloud_controller",
            "args": [
                "-c",
                "tmp/cloud_controller.yml"
            ],
            "env": {
                "DB": "mysql",
                "DB_CONNECTION_STRING": "mysql2://root:supersecret@localhost:3306/ccdb"
            }
        }
    ]
}